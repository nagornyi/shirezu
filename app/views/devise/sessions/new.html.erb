<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Shirezu</title>
	<%= stylesheet_link_tag 'login/ecss/reset.css' %>
	<%= stylesheet_link_tag 'login/ecss/normalize.css' %>
	<%= stylesheet_link_tag 'login/css/style.css' %>

  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>

<body>

  <div class="container">
    <section class="login">
      <h1>Login to Shirezu</h1>
<pre style="text-align:center;color:#000;">
  ____  _     _                    
 / ___|| |__ (_)_ __ ___ _____   _ 
 \___ \| '_ \| | '__/ _ \_  / | | |
  ___) | | | | | | |  __// /| |_| |
 |____/|_| |_|_|_|  \___/___|\__,_|</pre>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <p><%= f.text_field :email, :value => "", :placeholder=>"Email" %></p>
        <p><%= f.password_field :password, :value => "", :placeholder=>"Password" %></p>
        <p class="remember_me">
          <label>
            <%= f.check_box :remember_me, :name=>"remember_me", :id=>"remember_me" %>
            Remember me on this computer
          </label>
        </p>
        <p class="submit"><%= f.submit "Login", :class => 'submit' %></p>
<% end %>
    </section>
  
    <section class="login-help">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %> | 
			<%= link_to "Sign up", new_registration_path(resource_name) %>
    </section>
  
    <section class="about">
      <p>
        <a href="/index.html">About</a> |
        <a href="/index.html">Help</a> |
        <a href="/index.html">Contact</a> |
				<span>Â© 2012 Artem Nagornyi, Shirezu.com</span>
      </p>
    </section>
  </div>
<%= devise_error_messages!%>
</body>
</html>
